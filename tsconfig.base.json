{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "allowJs": true,
    "resolveJsonModule": true,
    "noImplicitOverride": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    // "noUnusedLocals": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "stripInternal": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2015",
      "ESNext"
    ],
    "paths": {
      "@galacean/effects-core": [
        "./packages/effects-core/src"
      ],
      "@galacean/effects-webgl": [
        "./packages/effects-webgl/src"
      ],
      "@galacean/effects-helper": [
        "./packages/effects-helper/src"
      ],
      "@galacean/effects": [
        "./packages/effects/src"
      ],
      "@galacean/effects-threejs": [
        "./packages/effects-threejs/src"
      ],
      "@galacean/effects-plugin-*": [
        "./plugin-packages/*/src"
      ]
    }
  }
}
